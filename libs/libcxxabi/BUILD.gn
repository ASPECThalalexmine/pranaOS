import("//build/libs/TEMPLATE.gni")

pranaOS_static_library("libcxxabi") {
  sources = [ "src/cxa_runtime.cpp" ]

  if (target_cpu == "aarch32") {
    sources += [ "src/aeabi_runtime.cpp" ]
  }

  include_dirs = [
    "include/",
    "//libs/libc/include/",
    "//libs/libcxx/include/",
    "//libs/",
  ]

  configs = [ "//build/libs:libcxx_flags" ]

  if (host == "llvm") {
    cflags = [ "-flto" ]
  }
}
